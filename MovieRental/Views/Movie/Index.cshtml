@model MovieRental.Models.MovieModel
@{
    ViewBag.Title = "ChillFlix";
    ViewBag.Logged = Model.LoggedIn;
    if(Model.User != null)
    {
        ViewBag.User = Model.User.Email;
    }

}

<div class="carousel slide" id="featuredMovies" data-ride="carousel">
    <div class="carousel-inner">
        @foreach (var item in Model.Movies)
        {
            <div class="carousel-item">
                <img class="img-fluid" src="http://www.joblo.com/posters/images/full/the-last-jedi-poster-new.jpg" alt="@item.Title">
            </div>
        }
