@model MovieRental.Models.MovieModel
@{
    ViewBag.Title = Model.Genre + " - ChillFlix";
    ViewBag.Logged = Model.LoggedIn;
    if (Model.User != null)
    {
        ViewBag.User = Model.User.Email;
    }
}

<div class="container">
    <h2>Genre: @Model.Genre</h2>
    <ul class="list-group">
        @foreach (var item in Model.MoviesInEachGenre)
        {
            <a href="@Url.Action("Movie","Movie",new {movie = item, user = Model.User != null ? Model.User.Email : null })" class="list-group-item list-group-item-action">@item</a>
        }
    </ul>
</div>