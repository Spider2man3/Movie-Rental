<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="@Url.Action("Index","Movie")">ChillFlix</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @if (ViewBag.Logged != null && ViewBag.Logged == true)
                    {
                        <a class="nav-link" href="@Url.Action("Index","Movie",new {user = ViewBag.User })">Home</a>
                    }
                    else
                    {
                        <a class="nav-link" href="@Url.Action("Index","Movie")">Home</a>
                    }
                </li>
                <li class="nav-item">
                    @if (ViewBag.Logged != null && ViewBag.Logged == true)
                    {
                        <a class="nav-link" href="@Url.Action("Genres","Movie",new {user = ViewBag.User })">Genre</a>
                    }
                    else
                    {
                        <a class="nav-link" href="@Url.Action("Genres","Movie")">Genre</a>
                    }
                </li>
                <li class="nav-item">
                    @if (ViewBag.Logged != null && ViewBag.Logged == true)
                    {
                        <a class="nav-link" href="@Url.Action("About","Movie",new {user = ViewBag.User })">About</a>
                    }
                    else
                    {
                        <a class="nav-link" href="@Url.Action("About","Movie")">About</a>
                    }
                </li>
            </ul>
            @using (Html.BeginForm("Search", "Movie", new { user = ViewBag.User }, FormMethod.Post, new { @class = "form-inline my-2 my-lg-0" }))
            {
                <input class="form-control mr-sm-2" id="searchText" name="search" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" id="searchButton" type="submit">Search</button>
            }
            @if (ViewBag.Logged != null && ViewBag.Logged == true)
            {
                <a href="@Url.Action("Logout","Account", new {user = ViewBag.User })" style="margin-left:10px; color:#fff"><b>Logout</b></a>
            }
            else
            {
                <a href="@Url.Action("Login","Account")" style="margin-left:10px; color:#fff"><b>Login</b></a>
            }
        </div>
    </nav>
   
    <div class="container-fluid body-content">
        @RenderBody()
    </div>
    @*<footer class="container-fluid">
        <hr />
        <p>&copy; @DateTime.Now.Year - ChillFlix</p>
    </footer>*@
    <script src="~/Scripts/Site.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>

    @RenderSection("scripts", required: false)
</body>
</html>